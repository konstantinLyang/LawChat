<base:DefaultWindow x:Class="LawChat.Client.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModel="clr-namespace:lawChat.Client.ViewModel"
        xmlns:base="clr-namespace:LawChat.Client.View.Windows.Base"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding SelectedChat.Title, TargetNullValue=LawChat}"
        Height="810" Width="850" MinHeight="810" MinWidth="850"
        WindowState="Normal" WindowStyle="None"
        SourceInitialized="Window_SourceInitialized">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="#FF5D5D5D">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="25" MaxHeight="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--#region Title bar-->
            <Border Grid.ColumnSpan="2"
                    Background="#FF21242A">
                <!--#region Window buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel HorizontalAlignment="Right" Grid.Column="1"
                                Orientation="Horizontal">
                        <Button x:Name="BtnHide"
                                Style="{StaticResource WindowChromeButtonStyle}" Click="HandleMinimazeButtonClick">
                            <Path Data="M0 1H9"
                                  Style="{StaticResource TitleBarIcon}"/>
                        </Button>

                        <Button x:Name="BtnMinimize"
                                Style="{StaticResource WindowChromeButtonStyle}" Click="HandleMaximazeButtonClick">
                            <Path Data="M1 10V1H10V10H1Z"
                                  Style="{StaticResource TitleBarIcon}"/>
                        </Button>

                        <Button x:Name="BtnClose"
                                Style="{StaticResource WindowChromeButtonStyle}" Click="HandleCloseButtonClick">
                            <Path Data="M1 1L14 14M14 1L1 14"
                                  Style="{StaticResource TitleBarIcon}"/>
                        </Button>
                    </StackPanel>

                    <Border Grid.Column="0" Background="Transparent"
                            PreviewMouseLeftButtonDown="HandleTopBarPreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="HandleTopBarPreviewMouseLeftButtonUp"
                            PreviewMouseMove="HandleTopBarPreviewMouseMove"/>

                </Grid>

                <!--#endregion-->
            </Border>
            <!--#endregion-->

            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition MinWidth="270" MaxWidth="360" Width="260"/>
                </Grid.ColumnDefinitions>

                <!--#region Search Block-->
                <Grid Grid.Row="0" Grid.Column="1" Margin="0, 0.5,0.5,0.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.ColumnSpan="2" Background="#FF191C21"/>

                    <!--#region Search TextBox-->
                    <TextBox x:Name="SearchTextBox" Style="{DynamicResource BorderTextBox}" Text="{Binding SearchBox, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Column="0" Margin="15,0">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="TextChanged">
                                <b:InvokeCommandAction Command="{Binding FindUserCommand}"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </TextBox>
                    <TextBlock Grid.Column="0" Text="Поиск" VerticalAlignment="Center" Margin="28,0,25,0" IsHitTestVisible="False"
                               Foreground="Gainsboro">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!--#endregion-->

                    <!--#region Dock panel Button-->
                    <Button Grid.Column="1" Cursor="Hand" Command="{Binding OpenRightPanelCommand}" Style="{StaticResource ImageButton}" Margin="0">
                        <Path Fill="#FF9C9C9C" Data="M0.918968 17.0473L0.918968 15.0473L20.919 15.0473V17.0473H0.918968ZM0.918968 9.98732L0.918968 7.98732L20.919 7.98732V9.98732H0.918968ZM0.918968 0.927319L0.918968 2.92732L20.919 2.92732V0.927319H0.918968Z"/>
                    </Button>
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <!--#region Contact Block-->
                <Grid Grid.Row="1" Grid.Column="1" >
                    <Border Background="#FF191C21" Margin="0, 0,0.5,0.5">
                        <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch"
                                 Background="Transparent" SelectedItem="{Binding SelectedChat}"
                                 BorderThickness="0" ItemsSource="{Binding MainDialogCollection, UpdateSourceTrigger=PropertyChanged}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="SelectionChanged">
                                    <b:InvokeCommandAction Command="{Binding ChatChangedCommand}"/>
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border MaxHeight="60" Height="100" BorderThickness="1" Cursor="Hand">
                                        <Border Margin="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition MinWidth="20" MaxWidth="40"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Grid>
                                                        <Ellipse Width="48" Height="48" RenderOptions.BitmapScalingMode="HighQuality">
                                                            <Ellipse.Fill>
                                                                <ImageBrush Stretch="UniformToFill"
                                                                            ImageSource="{Binding ContactPhoto, FallbackValue='no_avatar.jpg'}"/>
                                                            </Ellipse.Fill>
                                                        </Ellipse>
                                                    </Grid>
                                                    <Grid>
                                                        <Ellipse Margin="-6,35,0,0" StrokeThickness="6"
                                                                 Width="14" Height="14" Fill="Chartreuse" Stroke="Transparent">
                                                        </Ellipse>
                                                        <Grid.Style>
                                                            <Style TargetType="{x:Type Grid}">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnline, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                    </Grid>
                                                    <StackPanel Margin="5, 0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Foreground="White" FontSize="13" FontWeight="DemiBold"/>
                                                        <TextBlock TextWrapping="NoWrap" Text="{Binding LastMessage, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource LastMessageTextConverter}}" Foreground="#FFB8C0C3" Margin="0,5,0,0" FontWeight="Light" FontSize="13"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                                                    <TextBlock Margin="0, 5, 0, 0" Text="{Binding LastMessageDateTime, Converter={StaticResource LastMessageDateTimeConverter}, UpdateSourceTrigger=PropertyChanged}" Foreground="#FFB8C0C3" FontSize="13" FontWeight="Light"/>
                                                    <Grid>
                                                        <Ellipse StrokeThickness="6" HorizontalAlignment="Right" Margin="0,7,0,0"
                                                                 Width="17" Height="17" Fill="#8e89f5">
                                                        </Ellipse>
                                                        <Grid.Style>
                                                            <Style TargetType="{x:Type Grid}">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRead, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
                <!--#endregion-->

                <!--#region Top chat bar-->
                <Grid Grid.Column="0" Grid.Row="0" Margin="0.5">
                    <Border Background="#FF191C21" AllowDrop="True">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Drop">
                                <b:CallMethodAction MethodName="OnFileDrop" TargetObject="{Binding}" />
                            </b:EventTrigger>
                            <b:EventTrigger EventName="DragEnter">
                                <b:CallMethodAction MethodName="OnFileEnter" TargetObject="{Binding}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                        <TextBlock Padding="15,0,0,0" Text="{Binding SelectedChat.Title}" VerticalAlignment="Center" FontSize="14" Foreground="White"/>
                    </Border>
                </Grid>
                <!--#endregion-->

                <!--#region Messages Box-->
                <Grid Grid.Row="1" Grid.Column="0" Background="#FF262937">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition MinHeight="45" MaxHeight="300" Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="Transparent" Margin="0.5, 0,0,5">
                        <ScrollViewer ScrollChanged="ScrollViewer_OnScrollChanged">
                            <ItemsControl ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Hidden" AllowDrop="True" 
                                          Background="Transparent" BorderThickness="0" ItemsSource="{Binding SelectedChat.Messages}" VerticalAlignment="Bottom">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="5,2,0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition MaxWidth="60" Width="*"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <Image Cursor="Hand" RenderOptions.BitmapScalingMode="HighQuality" MaxHeight="600" MaxWidth="500" Grid.RowSpan="3"  Grid.ColumnSpan="2" Source="{Binding FilePath, TargetNullValue={x:Null}}">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                    <b:Interaction.Triggers>
                                                        <b:EventTrigger EventName="MouseLeftButtonUp">
                                                            <b:InvokeCommandAction Command="{Binding OpenFileCommand}" CommandParameter="{Binding Id}"/>
                                                        </b:EventTrigger>
                                                    </b:Interaction.Triggers>
                                                </Image>

                                                <Border x:Name="FileBorder" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Width="45" Height="45"  Cursor="Hand"
                                                        CornerRadius="13" VerticalAlignment="Center" Margin="10,10,0,10" Background="SkyBlue">
                                                    <Path VerticalAlignment="Center" Width="30" Height="30" HorizontalAlignment="Center" SnapsToDevicePixels="True" Fill="White"
                                                          Data="M21.25 26.25H8.75C8.08696 26.25 7.45107 25.9866 6.98223 25.5178C6.51339 25.0489 6.25 24.413 6.25 23.75V6.25C6.25 5.58696 6.51339 4.95107 6.98223 4.48223C7.45107 4.01339 8.08696 3.75 8.75 3.75H15.7325C16.064 3.75007 16.3819 3.88181 16.6163 4.11625L23.3838 10.8837C23.6182 11.1181 23.7499 11.436 23.75 11.7675V23.75C23.75 24.413 23.4866 25.0489 23.0178 25.5178C22.5489 25.9866 21.913 26.25 21.25 26.25Z"/>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFile}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <b:Interaction.Triggers>
                                                        <b:EventTrigger EventName="MouseLeftButtonUp">
                                                            <b:InvokeCommandAction Command="{Binding OpenFileFolderCommand}" CommandParameter="{Binding Id}"/>
                                                        </b:EventTrigger>
                                                    </b:Interaction.Triggers>
                                                </Border>
                                                <TextBox Grid.Row="0" IsReadOnly="True" MaxWidth="500" Background="Transparent" VerticalAlignment="Center" BorderThickness="0" Margin="15,8,15,0"
                                                         Grid.Column="1" Foreground="White" TextWrapping="Wrap" FontWeight="Normal" FontSize="14" Text="{Binding Text}">
                                                    <TextBox.Style>
                                                        <Style TargetType="TextBox">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBox.Style>
                                                </TextBox>
                                                <TextBlock Cursor="Hand" Grid.Row="0" Margin="17,8,15,0" FontSize="14"  Grid.Column="1" Foreground="SkyBlue" Text="{Binding Text}" TextWrapping="Wrap"
                                                           Background="Transparent"  VerticalAlignment="Center" FontWeight="Normal">
                                                    <b:Interaction.Triggers>
                                                        <b:EventTrigger EventName="MouseUp">
                                                            <b:InvokeCommandAction Command="{Binding OpenFileCommand}" CommandParameter="{Binding Id}"/>
                                                        </b:EventTrigger>
                                                    </b:Interaction.Triggers>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFile}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1" Grid.Row="1" FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                                           Margin="50,0,14,3" Foreground="#FFB8C0C3"
                                                           Text="{Binding CreateDate, Converter={StaticResource DateTimeToDateConverter}}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                            <Border.Style>
                                                <Style TargetType="{x:Type Border}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsReceivedMessage}" Value="False">
                                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                                            <Setter Property="Background" Value="#464695"/>
                                                            <Setter Property="CornerRadius" Value="15,15,0,15"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsReceivedMessage}" Value="True">
                                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                                            <Setter Property="Background" Value="#32323E"/>
                                                            <Setter Property="CornerRadius" Value="0,15,15,15"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <Border Margin="5" Grid.Row="0" Visibility="{Binding StickerBlockVisibility}"
                            Height="150" Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Right" CornerRadius="6,6,0,6" Background="#FF191C21">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding EmojiCollection}" VerticalContentAlignment="Center">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate >
                                        <Button Style="{StaticResource ImageButton}" Cursor="Hand" MaxHeight="25" MaxWidth="25" Margin="5">
                                            <Image RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Source="{Binding ImageFilePath, TargetNullValue={x:Null}}"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!--#region TextBox to send message-->
                    <Grid Grid.Row="1" Margin="0.5">
                        <Border Background="#FF191C21">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="50" MaxWidth="50"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition MinWidth="50" MaxWidth="50"/>
                                    <ColumnDefinition MinWidth="50" MaxWidth="50"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition MinHeight="0"/>
                                    <RowDefinition MinHeight="45" MaxHeight="45"/>
                                </Grid.RowDefinitions>

                                <!--#region MessageTextBox-->
                                <TextBox xml:lang="ru-RU" SpellCheck.IsEnabled="True" MaxHeight="250" MaxLength="4078" AcceptsReturn="True" Grid.Row="0" Style="{DynamicResource MessageTextBox}" Text="{Binding CurrentMessageTextBox, UpdateSourceTrigger=PropertyChanged}"
                                         Grid.RowSpan="2" Grid.Column="1" x:Name="TextMessageBox" SelectionBrush="#FF93CFFF"  SelectionTextBrush="White" CaretBrush="White">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" FontFamily="roboto" Text="печатать" VerticalAlignment="Center" FontWeight="Light" SnapsToDevicePixels="True" Foreground="Gainsboro" Margin="13,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TextMessageBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!--#endregion-->

                                <!--#region clip Button-->
                                <!--#endregion-->

                                <!--#region emoji Button-->
                                <!--#endregion-->

                                <!--#region Send Button-->
                                <Button IsDefault="True" Grid.Row="1" Style="{StaticResource WindowIconButton}" Grid.Column="0" Command="{Binding SendFileCommand}" Cursor="Hand">
                                    <Path Height="21" Width="21" Data="M1.06767 6.85704C0.313466 5.64217 0.463737 4.02545 1.51848 2.97071C2.74847 1.74072 4.74267 1.74072 5.97265 2.97071L12.0556 9.05368L12.0581 9.05624L16.3227 13.3208C16.9611 13.9592 16.9611 14.9942 16.3227 15.6326C15.6843 16.271 14.6493 16.271 14.0109 15.6326L4.725 6.34676C4.68594 6.3077 4.68594 6.24439 4.725 6.20533C4.76405 6.16628 4.82736 6.16628 4.86642 6.20533L14.1523 15.4912C14.7126 16.0515 15.621 16.0515 16.1812 15.4912C16.7415 14.9309 16.7415 14.0225 16.1812 13.4622L6.89538 4.17637L6.89293 4.17383L5.83123 3.11213C4.67935 1.96025 2.81178 1.96025 1.6599 3.11213C0.563181 4.20885 0.510667 5.95437 1.50236 7.11322L12.0593 17.6701C13.7894 19.4003 16.5945 19.4003 18.3246 17.6701C20.0547 15.94 20.0547 13.1349 18.3246 11.4048L7.49051 0.57071C7.45146 0.531658 7.45146 0.468342 7.49051 0.429289C7.52956 0.390237 7.59288 0.390237 7.63193 0.429289L18.466 11.2634C20.2743 13.0716 20.2743 16.0033 18.466 17.8116C16.6578 19.6198 13.7261 19.6198 11.9179 17.8116L7.63712 13.5308C7.62411 13.526 7.61192 13.5183 7.60146 13.5079L1.51848 7.42488C1.4615 7.36789 1.40716 7.30927 1.35545 7.24916L1.08376 6.97746C1.05112 6.94483 1.04576 6.89525 1.06767 6.85704Z" 
                                          SnapsToDevicePixels="True"
                                          Style="{StaticResource WindowIcon}"/>
                                </Button>
                                <Button IsDefault="True" Grid.Row="1" Style="{StaticResource WindowIconButton}" Grid.Column="2" Command="{Binding SendMessageCommand}" Cursor="Hand">
                                    <Path Data="M1.05446 0.948511C1.08916 0.913726 1.13037 0.886129 1.17575 0.867298C1.22113 0.848468 1.26978 0.838776 1.31891 0.838776C1.36804 0.838776 1.41669 0.848468 1.46207 0.867298C1.50745 0.886129 1.54867 0.913726 1.58336 0.948511L6.06558 5.43073C6.10037 5.46543 6.12796 5.50664 6.14679 5.55202C6.16562 5.5974 6.17532 5.64605 6.17532 5.69518C6.17532 5.74431 6.16562 5.79296 6.14679 5.83834C6.12796 5.88372 6.10037 5.92493 6.06558 5.95963L1.58336 10.4419C1.51323 10.512 1.4181 10.5514 1.31891 10.5514C1.21972 10.5514 1.1246 10.512 1.05446 10.4419C0.984323 10.3717 0.944921 10.2766 0.944921 10.1774C0.944921 10.0782 0.984323 9.98309 1.05446 9.91295L5.27298 5.69518L1.05446 1.47741C1.01968 1.44272 0.992078 1.4015 0.973248 1.35612C0.954417 1.31074 0.944725 1.26209 0.944725 1.21296C0.944725 1.16383 0.954417 1.11518 0.973248 1.0698C0.992078 1.02443 1.01968 0.983207 1.05446 0.948511Z" 
                                          SnapsToDevicePixels="True"
                                          Style="{StaticResource WindowIcon}"/>
