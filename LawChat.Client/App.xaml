<Application x:Class="LawChat.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:LawChat.Client.Assets.Converters">

    <Application.Resources>
        
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/LawChat.UI;component/Theme/DarkMode.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <converters:DateTimeToDateConverter x:Key="DateTimeToDateConverter" />
            <converters:LastMessageDateTimeConverter x:Key="LastMessageDateTimeConverter" />
            <converters:LastMessageTextConverter x:Key="LastMessageTextTimeConverter" />
            <converters:LastMessageTextConverter x:Key="LastMessageTextConverter" />

        </ResourceDictionary>

    </Application.Resources>

</Application>
